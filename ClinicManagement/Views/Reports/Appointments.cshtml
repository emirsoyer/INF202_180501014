@model IEnumerable<ClinicManagement.Core.Models.Appointment>
@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #renderTable {
        background-color: white;
    }
</style>
<span class="section">Termine</span>
<div class="row">
    <!-- form date pickers -->
    <div class="well" style="overflow: auto">
        <form id="form1">
            <div class="col-sm-2">
            </div>

            <div class="col-sm-3">
                <label>Auswählen</label><br />
                <select name="option" class="form-control">
                    <option value="">--Wähle eins--</option>
                    <option value="ThisMonth">Diesen Monat </option>
                    <option value="Pending">Ausstehend </option>
                    <option value="Approved">Genehmigt </option>
                </select>
            </div>
            <div class="col-sm-3">
                <label>Arzt </label>
                <input type="text" name="name" class="form-control" placeholder="Namen des Arztes eingeben" />
            </div>
            <div class="col-sm-3">
                <label></label><br />
                <input type="button" class="btn btn-primary" value="Einreichen" id="submit" />
                <input type="button" class="btn btn-default" id="showAll" value="Zeige alles" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div id="renderTable" class="x_content">
                @Html.Partial("_Appointments")

            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        //$('.datepicker').datepicker();

        $(document).ready(function () {
            $('#submit').on('click', function () {
                $('#renderTable').load("TestAppointment", $('#form1').serialize());
            });
        });


        $('#showAll').on('click', function () {
            location.reload(true);
        });
    </script>

}

